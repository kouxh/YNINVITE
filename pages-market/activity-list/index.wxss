/* pages-market/activity-list/index.wxss */
.pages-activity-index{
  width: 100%;
  height: 100vh;
}
.list-box{
  margin-top: 20rpx;
}

.each-list{
  width: 640rpx;
	height: 111rpx;
	background-color: #fff;
	box-shadow: 0rpx 4rpx 12rpx 0rpx 
		#f2f2f2;
  border-radius: 10rpx;
  padding: 25rpx 0rpx 20rpx 36rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.list-top{
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.top-title{
  width: 450rpx;
  margin-right: 20rpx;
}
.operation{
  width: 134rpx;
	height: 38rpx;
	border-radius: 19rpx;
  border: solid 1rpx #666666;
  font-size: 24rpx;
  letter-spacing: 0rpx;
  display: inline-block;
  color: #666666;
  line-height: 38rpx;
  text-align: center;
  font-weight: 500;
}
.list-base,.base-left,.base-right{
  display: flex;
  align-items: center;
}
.base-right{
  margin-left: 46rpx;
}
.person{
  font-size: 28rpx;
	letter-spacing: 0rpx;
  color: #999999;
  margin-left: 6rpx;
}
.active{
  color: #147de1;
  border: solid 1rpx #147de1;
}
.icon-iconfontlianxiren01{
  font-size: 24rpx;
}
