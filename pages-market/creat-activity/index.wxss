  color: #999999;
}

.icon-sousuo1,
.icon-jiantoudown {
  font-size: 26rpx;
  color: #999999;
  display: flex;
  font-weight: 600;
}

.each-item .van-radio-group {
  display: flex;
  align-items: center;
}

.van-radio {
  margin-right: 50rpx;
  display: flex;
}

.van-radio__label {
  font-size: 24rpx;
  letter-spacing: 0rpx;
  color: #333;
  margin-left: 10rpx !important;
}

.van-radio__icon {
  font-size: 24rpx !important;
}

.submit {
  width: 674rpx;
  height: 74rpx;
  background-image: linear-gradient(-75deg,
      rgba(0, 77, 204, 1) 0%,
      #46c0ff 100%),
    linear-gradient(#eeeeee,
      #eeeeee);
  background-blend-mode: normal,
    normal;
  box-shadow: 0rpx 4rpx 9rpx 0rpx #c6c6c6;
  border-radius: 10rpx;
  margin: 46rpx auto;
  font-size: 32rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
  line-height: 74rpx;
  text-align: center;
  margin-bottom: 400rpx;
}
checkbox{
