.eachImg-loading {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.5);
}
.eachImg-loading .loading-each {
  margin: 40rpx auto;
  width: 40rpx;
  height: 40rpx;
  border: 6rpx rgba(0, 0, 0, 0) solid;
  border-left-color: #ff8855;
  border-right-color: #ff4444;
  border-radius: 100%;
  animation: loading1 1s infinite linear;
}
@keyframes loading1 {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}