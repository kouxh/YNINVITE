}

.special {
  width: 44% !important;
}

.form-content {
  padding: 0rpx 40rpx 0 34rpx;
  margin-bottom: 200rpx;
}

.each-item {
  height: 80rpx;
  border-bottom: 1rpx solid#e8e8e8;
  display: flex;
  margin-top: 20rpx;
}

.item-l {
  width: 33%;
  display: flex;
  align-items: center;
}

.icon-bitian {
  font-size: 40rpx;
  color: #ff5353;
  display: flex;
  align-items: center;
}

.lable {
  font-size: 26rpx;
  letter-spacing: 0rpx;
  color: #333333;
}

.item-r {
  width: 67%;
