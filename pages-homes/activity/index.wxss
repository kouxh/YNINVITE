.pages-activity-index{
  width: 100%;
  height: 100vh;
}
.list-box{
  margin-top: 20rpx;
}

.each-list{
  width: 640rpx;
	height: 111rpx;
	background-color: #fff;
	box-shadow: 0rpx 4rpx 12rpx 0rpx 
		#f2f2f2;
  border-radius: 10rpx;
  padding: 25rpx 0rpx 20rpx 36rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 24rpx;
}
.active{
  background-image: linear-gradient(
		#e8f6ff, 
		#e8f6ff), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;

}
.list-top{
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}
.list-base,.base-left,.base-right{
  display: flex;
  align-items: center;
}
.base-right{
  margin-left: 46rpx;
}
.person{
  font-size: 28rpx;
	letter-spacing: 0rpx;
  color: #999999;
  margin-left: 6rpx;
}
.icon-shijian{
  font-size: 26rpx;
}