<view class="pages-check-index">
  <view class="header-box">
    <view class="header-left" bindtap="backFn">
      <icon class="iconfont icon-fanhui"></icon>
      <text class="page-name">我提名的客户</text>
    </view>
    <navigator hover-class="none" url="/pages-homes/nominate/index" class="header-right">
      <text class="client">客户提名</text>
      <icon class="iconfont icon-jia1"></icon>
    </navigator>
  </view>
  <view class="sub-title">重塑边界 开启财务共享+时代</view>
  <!-- 加载中 -->
  <view class="content-box" wx:if="{{listShowType==0}}">
    <van-loading type="spinner" class="loading" />
  </view>
  <!-- 有内容 -->
  <scroll-view scroll-y="true" class="content-box scroll-height" wx:if="{{listShowType==1}}">
    <view class="list-box">
      <view class="num-box">
        <view class="list-num">已提名<text class="num">05</text>人</view>
      </view>
      <block wx:for="{{listData}}" wx:key="index">
        <view class="each-list">
          <view class="list-left">
            <view class="left-l">
              <image mode='aspectFill' src="/assets/img/photo.png" alt class="img" />
            </view>
            <view class="left-r">
              <view class="name">
                <text>{{item.name}}</text>
                <view class="company ellipsis1row">{{item.company}}</view>
              </view>
              <view class="flight-info">
                <icon class="iconfont icon-hangbanchaxun icon-color"></icon>
                <!-- <image mode='aspectFill' src="/assets/img/flight.png" alt class="img flight-img" /> -->
                <text class="info">航班信息：{{item.flight?item.flight:'--'}}</text>
              </view>
            </view>
          </view>
          <navigator wx:if="{{item.status==0}}" hover-class="none" url="/pages-homes/complete/index" class="list-right">
            <text class="join">参会</text>
            <text class="bar">|</text>
            <text class="no-join">不参会</text>
          </navigator>
          <view wx:if="{{item.status==1}}" class="list-right">
            <view class="common success"></view>
            <navigator hover-class="none" url="/pages-homes/complete/index" class="text">参会</navigator>
          </view>
          <view wx:if="{{item.status==2}}" class="list-right">
            <view class="common no-success"></view>
            <text class="text">不参会</text>
          </view>
          <view wx:if="{{item.status==3}}" class="list-right">
            <view class="common no-check"></view>
            <text class="text">审核未通过</text>
          </view>
          <view wx:if="{{item.status==4}}" class="list-right">
            <view class="common checking"></view>
            <text class="text">审核中</text>
          </view>
          <view wx:if="{{item.status==5}}" class="list-right" bindtap="refuteFn">
            <view class="refute-box">被驳回</view>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>
  <!-- 无内容 -->
  <view class="content-box" wx:if="{{listShowType==2}}">
    <view class="nomsg-img-box">
      <image mode='aspectFill' src="/assets/img/noData.png" alt class="nomsg-img" />
      <view class="tips-msg">暂无数据 ......</view>
    </view>
  </view>
  <view class="footer">
    <icon class="iconfont icon-tanhao icon-color"></icon>
    <view class="footer-info">客户公司、姓名审核成功后不可更改，如您的客户需要更换联系人报名，请您重新注册提交审核</view>
  </view>
  <!-- 反驳弹框 -->
  <van-popup show="{{ refuteShow }}" round closeable bind:close="onClose">
    <view class="popup-box">
      <view class="box-title">驳回原因：住宿标准不符合要求</view>
      <navigator hover-class="none" url="/pages-homes/nominate/index" class="box-btn">返回修改</navigator>
    </view>
  </van-popup>
</view>