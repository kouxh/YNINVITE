    background-color: #FAFAFA;
}

/* 一行省略 */
.ellipsis1row {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 两行省略 */
.ellipsis2row {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  /*! autoprefixer: off */
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
.fifiveline {
  display: -webkit-box !important;
  -webkit-line-clamp: 6;
  overflow: hidden;
  text-overflow: ellipsis;
  /*! autoprefixer: off */
  word-break: break-all;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
