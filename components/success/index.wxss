.common_mask {
  background-color: rgba(0, 0, 0, 0.9);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  transition: transform 0.3s ease-in-out;

}

.mask_box {
  display: flex;
  align-items: center;
  height: 100%;
}

.content {
  margin: 0 auto;
  display: flex;
}

.bg-box {
  position: relative;
  top: -220rpx;
}

.bg-img {
  width: 300rpx;
  height: 300rpx;
}

.do-box {
  position: absolute;
  top: 328rpx;
  left: 23%;
  font-size: 40rpx;
  color: #ffffff;
}

.img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


.close-box {
  width: 62rpx;
  height: 62rpx;
  text-align: center;
  position: absolute;
  top: 60%;
  left: 45%;
}

.close-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
